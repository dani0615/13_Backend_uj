<Window x:Class="CegautokKliens.UserManagement.DeleteUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CegautokKliens.UserManagement"
        mc:Ignorable="d"
        Title="DeleteUserWindow" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Are you sure you want to delete this user?" FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="tbUserInfo" Margin="0,0,0,20"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnDelete" Content="Delete" Click="btnDelete_Click" Width="80" Margin="10" Padding="5" Background="Red" Foreground="White"/>
                <Button x:Name="btnCancel" Content="Cancel" Click="btnCancel_Click" Width="80" Margin="10" Padding="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
