<Window x:Class="CegautokKliens.UserManagement.UpdateUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CegautokKliens.UserManagement"
        mc:Ignorable="d"
        Title="UpdateUserWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ScrollViewer Grid.Row="0">
            <StackPanel Margin="10">
                <Label Content="User Name"/>
                <TextBox x:Name="tbxName" Margin="0,0,0,5"/>
                
                <Label Content="Login Name"/>
                <TextBox x:Name="tbxLoginName" Margin="0,0,0,5"/>
                
                <Label Content="Email:"/>
                <TextBox x:Name="tbxEmail" Margin="0,0,0,5"/>
                
                <Label Content="Address:"/>
                <TextBox x:Name="tbxAddress" Margin="0,0,0,5"/>
                
                <Label Content="Phone Number"/>
                <TextBox x:Name="tbxPhone" Margin="0,0,0,5"/>
                
                <Label Content="Image file name:"/>
                <TextBox x:Name="tbxImage" Margin="0,0,0,5"/>
                
                <Label Content="Permission"/>
                <ComboBox Name="cbxPermission" Margin="0,0,0,5"/>
                
                <CheckBox Content="Active" Name="chbActive" Margin="0,10,0,0" />
                
                <Label Content="New Password (leave empty to keep current)"/>
                <PasswordBox x:Name="pbxPassword" Margin="0,0,0,5"/>
                
                <Label Content="Confirm New Password"/>
                <PasswordBox x:Name="pbxConfirmPassword" Margin="0,0,0,5"/>
            </StackPanel>
        </ScrollViewer>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" Margin="10">
            <Button x:Name="btnSave" Content="Update" Click="btnSave_Click" Width="80" Margin="5" Padding="5"/>
            <Button x:Name="btnExit" Content="Exit" Click="btnExit_Click" Width="80" Margin="5" Padding="5"/>
        </StackPanel>
    </Grid>
</Window>
