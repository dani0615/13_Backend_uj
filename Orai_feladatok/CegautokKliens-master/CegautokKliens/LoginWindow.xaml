<Window x:Class="CegautokKliens.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CegautokKliens"
        mc:Ignorable="d"
        Title="LoginWindow" Height="300" Width="300">
    <Grid>
        <StackPanel>
            <Label Content="Login név"/>
            <TextBox x:Name="tbxLoginNev" Text="probaodon"/>
            <Label Content="Password"/>
            <PasswordBox x:Name="pwxPassword" Password="p"/>
            <Button x:Name="btnLogin" 
                    Content="Bejelentkezés" 
                    Margin="5" 
                    Padding="5" 
                    Click="btnLogin_Click"/>
        </StackPanel>
    </Grid>
</Window>
